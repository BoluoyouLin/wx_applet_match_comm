}

.weui-uploader__file{
  width: calc(( 100vw - 9px * 3 - 68rpx ) / 3);
  height: calc(( 100vw - 9px * 3 - 68rpx ) / 3);
  display: flex;
  flex-direction: column;
  align-items: center;
  background-repeat:no-repeat; /** 不重复*/
  background-position: center center;
  background-size: cover;
  margin-right:9rpx;
  margin-left:9rpx;
  margin-bottom:18rpx;

}

.weui-uploader__input-box{
  width: calc(( 100vw - 9px * 3 - 68rpx ) / 3);
  height: calc(( 100vw - 9px * 3 - 68rpx ) / 3);
  margin-right:9rpx;
  margin-left:9rpx;
  margin-bottom:18rpx;
}

#ar-table{
   margin-top: 60rpx;

}

#ar-table-title{
  text-align: center;
  font-size: 30rpx;
  color: rgb(80, 80, 80);
  margin-bottom: 20rpx;
}

.ar-table-tr{
  display: flex;
  flex-direction:row;
  width:95%;
  margin:auto auto;
}

.ar-table-tr  :nth-child(1){
  width: 40%;
  
}

.ar-table-tr  :nth-child(2){
  width: 60%;
 
}


.ar-table-th{
  font-size: 26rpx;
  padding: 20rpx 10rpx 20rpx 10rpx;
  text-align: center;
  border:1rpx solid rgb(238, 238, 238);
  color: rgb(122, 150, 140)
}

.ar-footer{
      display: flex;
    flex-direction: row;
    justify-content: space-around;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 999;
    width: 100%;
    height: 98rpx;
    box-shadow: 0 0 2px rgba(0, 0, 0, 0.1);
}

.ar-footer-swrap{
