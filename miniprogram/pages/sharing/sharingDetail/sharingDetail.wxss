
@import '../../../styles/weui.wxss';

page {
  background-color: #f8f8f8;
  font-size: 16px;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.page__hd {
  padding: 40rpx;
  display: flex;
}

.page__hd image {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.page__bd {
  padding: 0 0 40rpx 0;
}

.page__bd_spacing {
  padding-left: 15px;
  padding-right: 15px;
}

.page__ft {
  padding-bottom: 10px;
  text-align: center;
}

.page__title {
  text-align: left;
  font-size: 20px;
  font-weight: 400;
}

.page__desc {
  margin-top: 5px;
  color: #888;
  text-align: left;
  font-size: 14px;
}

/* 轮播图 */

.swiper-wrap {
  padding: 10rpx 0;
  width: 100%;
}

.swiper-wrap swiper-item {
  width: 100%;
}

.swiper-wrap swiper-item image {
  width: 100%;
}

.content-info {
  display: flex;
  align-items: center;
  width: 100%;
}

.content-info image {
  width: 35rpx;
  height: 35rpx;
}

.content-info text {
  flex: 6;
  font-size: 25rpx;
  margin-left: 5rpx;
  color: #818181;
}

.publish_at {
  font-size: 31rpx;
  color: grey;
}

.bottom_line{
  border-bottom: 1px solid rgba(173, 169, 169, 0.959)
}
