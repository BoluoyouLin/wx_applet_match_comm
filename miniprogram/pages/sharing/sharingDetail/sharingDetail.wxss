
@import '../../../styles/weui.wxss';

page {
  background-color: #f8f8f8;
  font-size: 16px;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.page__hd {
  padding: 40rpx;
  display: flex;
}

.page__hd image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.page__bd {
  padding: 0 0 40rpx 0;
}

.page__bd_spacing {
  padding-left: 15px;
  padding-right: 15px;
}

.page__ft {
  padding-bottom: 10px;
  text-align: center;
}

.page__title {
  text-align: left;
  font-size: 35rpx;
  font-weight: 400;
  color: #00baad;
}

.page__desc {
  margin-top: 5px;
  color: #888;
  text-align: left;
  font-size: 25rpx;
}

/* 轮播图 */

.swiper-wrap {
  padding: 10rpx 0;
  width: 100%;
}

.swiper-wrap swiper-item {
  width: 100%;
}

.swiper-wrap swiper-item image {
  width: 100%;
}



.bottom_line{
  border-bottom: 1px solid rgba(173, 169, 169, 0.959)
}


page{
  height:100%
}

#ad-container{
  height: 100%;
}

#ad-swrap{
  height: 100%;
  padding:20rpx 40rpx 40rpx 40rpx;
}

#ad-navigation{
  width: 100%;
  display:flex;
  flex-direction: row;

  border-bottom: 0.5rpx solid #bdbdbd;
  padding: 10rpx 0 10rpx 0;
}

#ad-avatar{
/* padding:18rpx 14rpx 14rpx 14rpx; */

}

#ad-avatar>image{
  height: 140rpx;
  width:140rpx;
  border-radius: 10% 
}

#ad-info{
  padding-left: 20rpx;
  width:100%;

  display:flex;
  flex-direction:column;
  Justify-content:space-around;

}

#ad-info view:nth-child(1){
  color: rgb(43, 43, 43);
  font-size: 34rpx;
  font-weight: 600
}

#ad-info view:nth-child(2){
  color: rgb(153,153,167);
  font-size: 24rpx;
  padding-bottom: 4rpx;
}

#ad-content{

  padding:40rpx 40rpx 40rpx 40rpx;
  
}

#conetent-article{
  color: black;
  font-size: 34rpx;
  line-height: 60rpx;
  margin-bottom: 40rpx;
}

#content-images{
  margin-bottom: 60rpx;
}

.content-image{

}

.ct-image{
  width: 100%;

}


.sd-footer{
  display: flex;
  flex-direction: row;
  /* justify-content: space-around; */
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 999;
  width: 100%;
  height: 90rpx;
  box-shadow: 0 0 2px rgba(0, 0, 0, 0.1);
}

.sd-footer-swrap{
  display: flex;
  flex-direction: row;
  font-size: 28rpx;
  line-height: 150%;
  text-align: center;
  width:100%;
}




#sd-footer image {
  width: 35rpx;
  height: 35rpx;
}

#sd-footer text {

  font-size: 25rpx;
  margin-left: 5rpx;
  color: #818181;
}

.publish_at {
  font-size: 31rpx;
  color: #00baad;
  flex:2;
  text-align:right;

}

#sd-footer{
  width: 100%;
