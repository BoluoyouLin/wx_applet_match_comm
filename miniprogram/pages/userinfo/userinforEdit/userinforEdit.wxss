/* pages/userinfo/userinforEdit/userinforEdit.wxss */
page{
  height: 100%
}

.edit-all{
  width: 100%;
  height: 100%;
  background-color: gainsboro;
}

.edit-item image{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}

.edit-item text{
  flex: 8;
}

.edit-item{
  display: flex;
  align-items: center;
  border-bottom: 1px solid whitesmoke;
  background-color: #fff;
  width: 99%;
  height: 80rpx;
  font-size: 35rpx;
  padding-right:1%;
  line-height: 80rpx;
}

.edit-item::before{
  display: inline-block;
  content: '';
  background-color: #00baad;
  width: 5rpx;
  height: 80%;
  margin-right: 20rpx;
}

.content{
  font-size:30rpx;
  color:  darkgray;
  overflow: hidden;
}