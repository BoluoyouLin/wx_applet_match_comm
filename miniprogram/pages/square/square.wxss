/* miniprogram/pages/square.wxss */
.all{
  padding: 3%;
}

.view-item{
  float: left;
  width: 47%; 
  border-radius: 15rpx;
  border-width: 1px;
  border-color: #999;
  padding-bottom: 10rpx;
  margin: 10rpx;
}

.view-image{
  width: 100%;
}

.view-image image{
  width: 100%;
}

.view-content{
  display: flex;
  flex-direction: column;
  padding: 0 5rpx;
}

.content-desc{
  font-size: 28rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.content-bottom{
  display: flex;
  justify-content: space-between;
  padding: 0 5rpx;
}

.content-user-info{
  display: flex;
  align-items: center;
  width: 50%;
}

.content-user-info image{
  width: 45rpx;
  height: 45rpx;
  border-radius: 50%;
}

.content-user-info text{
  font-size: 20rpx;
  margin-left: 5rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.content-info{
  display: flex;
  align-items: center;
  width: 30%;
}

.content-info image{
  width: 35rpx;
  height: 35rpx;
}

.content-info text{
  font-size: 25rpx;
  margin-left: 5rpx;
  color: #999;
}