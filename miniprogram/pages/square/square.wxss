/* miniprogram/pages/square.wxss */
page{
  background-color: whitesmoke;
}

.all{
  padding: 2% 2% 128rpx 2%;
}

.view-block{
  text-align: justify;
  padding: 0 5rpx;
}

.view-left,.view-right{
  display: inline-block;
  vertical-align: top;
  width: 49%;
}

.view-right{
  float: right;
  margin-left: 10rpx;
}

.view-item{
  width: 100%; 
  border-radius: 10rpx;
  border: 1rpx solid #e0e0e0;
  padding-bottom: 5rpx;
  margin-bottom: 20rpx;
  background-color: #ffffff;
  /* height: 500rpx; */
}

.view-image{
  width: 100%;
  /* height: 80%; */
}

.view-image image{
  width: 100%;
  /* height: 100%; */
  min-height: 300rpx;
  max-height: 480rpx;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}

.view-content{
  display: flex;
  flex-direction: column;
  padding: 0 10rpx;
  height: 20%;
}

.content-desc{
  font-size: 28rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  color: #505050;
  padding: 10rpx 0;
}

.content-bottom{
  display: flex;
  justify-content: space-between;
  padding: 5rpx 5rpx 10rpx 5rpx;
}

.content-user-info{
  display: flex;
  align-items: center;
  flex:6;
}

.content-user-info image{
  width: 45rpx;
  height: 45rpx;
  border-radius: 50%;
}

.content-user-info text{
  font-size: 20rpx;
  margin-left: 5rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  color: #64505050;
}

.content-info{
  display: flex;
  align-items: center;
}

.content-info image{
  width: 35rpx;
  height: 35rpx;
}

.content-info text{
  font-size: 25rpx;
  margin-left: 5rpx;
  color: #818181;
}


