.tabbar{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 999;
  width: 100%;
  height: 120rpx;
  border-top: 1rpx solid #d7d7d7;
  background-color: #ffffff;
}

.tabbar-item{
  display: display;
  width: 33%;
  height: 120rpx;
  text-align: center;
}

.tabbar-item image{
  display: inline-block;
  width: 47rpx;
  margin: 20rpx 0;
}

#add{
  margin: 0;
  width: 120rpx;
}